@page "/login"

<div class="login-container">
    <div class="logo-container">
        <img src="https://img.freepik.com/premium-vector/burger-vector-illustration-burger-logo-design_921448-1011.jpg" alt="Burger Logo" class="burger-logo" />
    </div>

    @if (!string.IsNullOrWhiteSpace(StatusMessage))
    {
        <div class="alert alert-@Status">
            @StatusMessage
        </div>
    }

    <h2>Login</h2>

    <div class="input-group">
        <label for="username">Username</label>
        <input id="username" type="text" @bind="Model.Username" placeholder="Enter your username" />
    </div>

    <div class="input-group">
        <label for="password">Password</label>
        <input id="password" type="password" @bind="Model.Password" placeholder="Enter your password" />
    </div>

    <button @onclick="LoginUser " class="login-button">
        Log In
    </button>
</div>

<style>
    .burger-logo {
        width: 200px; /* Increased width */
        height: 120px; /* Increased height */
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .input-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
    }

    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 15px;
        font-size: 14px;
    }

    .login-button {
        width: 100%;
        padding: 12px;
        background-color: #FF9900;
        color: white;
        border: none;
        border-radius: 15px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .login-button:hover {
            background-color: #FFB300;
        }

    .alert {
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 15px;
    }

    .alert-success {
        background-color: #DFF2BF;
        color: #4F8A10;
    }

    .alert-error {
        background-color: #FFBABA;
        color: #D8000C;
    }
</style>