@page "/register"

<h3>Register</h3>

@if (!string.IsNullOrWhiteSpace(StatusMessage))
{
    <div class="alert alert-@Status">
        <i class="fa fa-info-circle"></i>&nbsp;
        @StatusMessage
    </div>
}

<table class="form-table">
    <tr>
        <td><label for="username">Username:</label></td>
        <td><input type="text" id="username" @bind="Model.Username" class="form-input" /></td>
    </tr>
    <tr>
        <td><label for="password">Password:</label></td>
        <td><input type="password" id="password" @bind="Model.Password" class="form-input" /></td>
    </tr>
    <tr>
        <td><label for="firstName">First Name:</label></td>
        <td><input type="text" id="firstName" @bind="Model.FirstName" class="form-input" /></td>
    </tr>
    <tr>
        <td><label for="lastName">Last Name:</label></td>
        <td><input type="text" id="lastName" @bind="Model.LastName" class="form-input" /></td>
    </tr>
    <tr>
        <td><label for="mobile">Mobile:</label></td>
        <td><input type="text" id="mobile" @bind="Model.MobileNumber" class="form-input" /></td>
    </tr>
    <tr>
        <td><label for="address">Address:</label></td>
        <td><textarea id="address" @bind="Model.Address" class="form-input"></textarea></td>
    </tr>
</table>


<div class="button-container">
    <button @onclick="RegisterUser" class="btn-submit">
        Save
    </button>
</div>

